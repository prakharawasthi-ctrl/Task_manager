<body>
    <div class="main w-full min-h-screen bg-zinc-900">
        <div class="form p-10 text-white">
            <form action="/create" method="post">
                <input class="block px-5 w-full rounded-md outline-none py-2 bg-zinc-800" type="text" name="title" placeholder="Title Goes">
                <textarea class="block px-5 w-full rounded-md outline-none mt-2 py-2 bg-zinc-800 resize-none" name="details" placeholder="Write your task details"></textarea>
                <input class="mt-2 bg-blue-600 px-5 py-2 rounded-md" type="submit" value="Create Task">
            </form>
            <div class="tasks flex gap-3 flex-wrap p-10">
                <% if(files.length>0){ %>
                    <% files.forEach(function(val){ %>
                        <div class="task min-w-72 px-3 py-4 bg-zinc-800 rounded-md">
                            <h1 class="text-white text-3xl tracking-tighter">
                                <%= val %>
                            </h1>
                            <div class="flex w-full gap-3 justify-between items-center">
                                <a class="text-blue-600 inline-block mt-3" href="/file/<%=val%>">Read More</a>
                                <a class="text-zinc-600" href="/edit/<%=val%>">edit filename</a>
                            </div>
                        </div>
                    <% }) %>
                <% } else {%>
                    <h1 class="text-zinc-600">no tasks yet</h1>
                <% } %>
               
